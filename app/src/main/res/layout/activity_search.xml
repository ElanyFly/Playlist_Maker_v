<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/search"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_activity_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/padding_16dp"
        android:orientation="horizontal"
        android:paddingVertical="@dimen/padding_14dp">

        <FrameLayout
            android:id="@+id/search_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foreground="?attr/selectableItemBackground"
            android:paddingVertical="@dimen/padding_8dp"
            android:paddingTop="@dimen/padding_16dp"
            android:paddingEnd="@dimen/padding_24dp"
            android:paddingBottom="@dimen/padding_16dp"
            tools:ignore="RtlSymmetry">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:src="@drawable/arrow_back"
                app:tint="@color/text_dark" />

        </FrameLayout>


        <TextView
            style="@style/ScreenHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:text="@string/search"
            android:textColor="@color/text_dark" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/padding_16dp"
            android:layout_marginBottom="@dimen/padding_8dp"
            android:layout_weight="1"
            android:background="@drawable/search_button">

            <EditText
                android:id="@+id/inputText"
                style="@style/SearchEditText"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="@dimen/padding_14dp"
                android:layout_marginEnd="44dp"
                android:background="@drawable/search_button"
                android:drawableStart="@drawable/searchicon_16"
                android:drawablePadding="@dimen/padding_8dp"
                android:drawableTint="@color/search_light_grey"
                android:fontFamily="@font/ys_display_regular"
                android:hint="@string/search"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:singleLine="true">

                <requestFocus />
            </EditText>

            <ImageView
                android:id="@+id/clearIcon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:layout_marginEnd="@dimen/padding_14dp"
                android:foregroundGravity="center_vertical"
                android:src="@drawable/close_16"
                android:visibility="gone"
                app:tint="@color/search_light_grey" />

        </FrameLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/historyHeader"
        style="@style/ErrorMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/padding_42dp"
        android:layout_marginBottom="@dimen/padding_12dp"
        android:text="@string/search_history_header"
        android:visibility="gone"/>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/track_view" />

            <Button
                android:id="@+id/btnClearHistory"
                style="@style/RefreshButton"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_margin="@dimen/padding_24dp"
                android:layout_gravity="center_horizontal"
                android:foreground="?attr/selectableItemBackground"
                android:text="@string/search_clear_history"
                android:visibility="gone"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/nothingFoundMessage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_activity_white"
            android:gravity="top|center"
            android:orientation="vertical"
            android:paddingTop="@dimen/paddingTop_100dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/padding_16dp"
                android:src="@drawable/nf_icon" />

            <TextView
                style="@style/ErrorMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/search_nothing_found_error_message" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/noInternetMessage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_activity_white"
            android:gravity="top|center"
            android:orientation="vertical"
            android:paddingTop="@dimen/paddingTop_100dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/padding_16dp"
                android:src="@drawable/ni_icon" />

            <TextView
                style="@style/ErrorMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/padding_16dp"
                android:text="@string/search_no_internet_part1"
                android:textAlignment="center" />

            <TextView
                style="@style/ErrorMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/padding_24dp"
                android:text="@string/search_no_internet_part2"
                android:textAlignment="center" />

            <Button
                android:id="@+id/refreshButton"
                style="@style/RefreshButton"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/refresh_button_height"
                android:foreground="?attr/selectableItemBackground"
                android:text="@string/search_refresh_button" />


        </LinearLayout>


    </FrameLayout>


</LinearLayout>