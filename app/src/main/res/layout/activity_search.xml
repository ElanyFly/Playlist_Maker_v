<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/search"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_activity_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/padding_16dp"
        android:orientation="horizontal"
        android:paddingVertical="@dimen/padding_14dp">

        <FrameLayout
            android:id="@+id/search_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foreground="?attr/selectableItemBackground"
            android:paddingVertical="@dimen/padding_8dp"
            android:paddingTop="@dimen/padding_16dp"
            android:paddingEnd="@dimen/padding_24dp"
            android:paddingBottom="@dimen/padding_16dp"
            tools:ignore="RtlSymmetry">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:src="@drawable/arrow_back"
                app:tint="@color/text_dark" />

        </FrameLayout>


        <TextView
            style="@style/ScreenHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:text="@string/search"
            android:textColor="@color/text_dark" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/padding_16dp"
            android:layout_marginBottom="@dimen/padding_16dp"
            android:layout_weight="1"
            android:background="@drawable/search_button">

            <EditText
                android:id="@+id/inputText"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="@dimen/padding_14dp"
                android:layout_marginEnd="44dp"
                android:background="@drawable/search_button"
                android:drawableStart="@drawable/searchicon_16"
                android:drawablePadding="@dimen/padding_8dp"
                android:drawableTint="@color/search_light_grey"
                android:hint="@string/search"
                android:inputType="text"
                android:lines="1"
                android:maxLines="5"
                android:textColorHint="@color/search_light_grey"
                android:textSize="@dimen/font_16sp">

                <requestFocus />
            </EditText>

            <ImageView
                android:id="@+id/clearIcon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:layout_marginEnd="@dimen/padding_14dp"
                android:foregroundGravity="center_vertical"
                android:src="@drawable/close_16"
                android:visibility="gone"
                app:tint="@color/search_light_grey" />

        </FrameLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/track_view"/>

        <LinearLayout
            android:id="@+id/nothingFoundMessage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="top|center"
            android:paddingTop="@dimen/paddingTop_100dp"
            android:background="@color/bg_activity_white"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/nf_icon"
                android:paddingBottom="@dimen/padding_16dp"/>

            <TextView
                style="@style/ErrorMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nothing_found_error_message"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/noInternetMessage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="top|center"
            android:paddingTop="@dimen/paddingTop_100dp"
            android:background="@color/bg_activity_white"
            android:visibility="visible">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ni_icon"
                android:paddingBottom="@dimen/padding_16dp"/>

            <TextView
                style="@style/ErrorMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Проблемы со связью"
                android:textAlignment="center"
                android:paddingBottom="@dimen/padding_16dp"/>

            <TextView
                style="@style/ErrorMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Загрузка не удалась. Проверьте подключение к интернету"
                android:textAlignment="center"
                android:paddingBottom="@dimen/padding_24dp"/>

            <Button
                style="@style/RefreshButton"
                android:id="@+id/refreshButton"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/refresh_button_height"
                android:foreground="?attr/selectableItemBackground"
                android:text="Обновить"/>


        </LinearLayout>


    </FrameLayout>



</LinearLayout>