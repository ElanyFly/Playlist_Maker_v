<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_blue"
    android:orientation="vertical"


    >

    <TextView
        style="@style/ScreenHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/padding_16dp"
        android:paddingVertical="@dimen/padding_14dp"
        android:text="@string/app_name"
        android:textColor="@color/white" />


    <Button
        android:id="@+id/main_search_button"
        style="@style/MainScreenButton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:foreground="?attr/selectableItemBackground"
        android:text="@string/search"
        app:icon="@drawable/search_icon" />

    <Button
        android:id="@+id/main_media_button"
        style="@style/MainScreenButton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:foreground="?attr/selectableItemBackground"
        android:text="@string/media"
        app:icon="@drawable/music_icon" />

    <Button
        android:id="@+id/main_pref_button"
        style="@style/MainScreenButton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:foreground="?attr/selectableItemBackground"
        android:text="@string/pref"
        app:icon="@drawable/pref_icon" />

</LinearLayout>