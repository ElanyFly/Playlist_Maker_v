<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="61dp"
    android:orientation="horizontal"

    tools:background="@color/bg_activity_white">

    <ImageView
        android:id="@+id/trackCover"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginStart="12dp"
        android:scaleType="centerCrop"
        tools:src="@drawable/bgcat" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginVertical="@dimen/padding_8dp"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/padding_8dp"
        android:paddingTop="6dp">

        <TextView
            android:id="@+id/trackName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_dark"
            android:textSize="@dimen/font_16sp"
            android:singleLine="true"
            tools:text="Smells Like dsdfsdf sdfsdf sdfsdffd Teen Spirit" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/artistName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/light_grey"
                android:textSize="11sp"
                android:singleLine="true"
                tools:text="Nirvaыва ываываываыва ываыывпв ываываы ываываna" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/dot_icon"
                app:tint="@color/light_grey" />

            <TextView
                android:id="@+id/trackTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/light_grey"
                android:textSize="11sp"
                tools:text="5:01" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="12dp"
        android:src="@drawable/arrow_forward"
        app:tint="@color/text_dark" />


</LinearLayout>