<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/padding_16dp"
        android:orientation="horizontal"
        android:paddingVertical="@dimen/padding_14dp">

        <FrameLayout
            android:id="@+id/settings_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foreground="?attr/selectableItemBackground"
            android:paddingVertical="@dimen/padding_8dp"
            android:paddingTop="@dimen/padding_16dp"
            android:paddingEnd="@dimen/padding_24dp"
            android:paddingBottom="@dimen/padding_16dp"
            tools:ignore="RtlSymmetry">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:src="@drawable/arrow_back"
                app:tint="@color/text_dark"/>

        </FrameLayout>


        <TextView
            style="@style/ScreenHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:text="@string/pref"
            android:textColor="@color/text_dark" />

    </LinearLayout>

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/padding_16dp"
        android:layout_marginTop="@dimen/padding_24dp"
        android:checked="false"
        android:fontFamily="@font/ys_display_regular"
        android:paddingVertical="@dimen/padding_21dp"
        android:text="@string/dark_theme"
        android:textColor="@color/text_dark"
        android:textSize="@dimen/font_16sp"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <LinearLayout style="@style/PrefLayout"
        android:id="@+id/settings_share_button">

        <TextView

            style="@style/PrefText"
            android:text="@string/share_app" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/share_icon"
            app:tint="@color/light_grey" />

    </LinearLayout>

    <LinearLayout style="@style/PrefLayout"
        android:id="@+id/settings_helpdesk_button">

        <TextView
            style="@style/PrefText"
            android:text="@string/helpdesk" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/support_icon"
            app:tint="@color/light_grey" />

    </LinearLayout>

    <LinearLayout style="@style/PrefLayout"
        android:id="@+id/settings_user_agreement_button">

        <TextView
            style="@style/PrefText"
            android:text="@string/user_agreement" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_forward"
            app:tint="@color/light_grey" />

    </LinearLayout>


</LinearLayout>