<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/audioPlayerMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.audio_player.AudioplayerActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/leftGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/padding_24dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/rightGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/padding_24dp" />

    <ImageView
        android:id="@+id/backArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_12dp"
        android:layout_marginBottom="@dimen/padding_12dp"
        app:tint="@color/text_dark"
        android:foreground="?attr/selectableItemBackground"
        android:src="@drawable/arrow_back"
        app:layout_constraintBottom_toTopOf="@id/audioplayerCover"
        app:layout_constraintStart_toStartOf="@id/leftGuideline"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/audioplayerCover"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/padding_24dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@id/trackName"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="@id/rightGuideline"
        app:layout_constraintStart_toStartOf="@id/leftGuideline"
        app:layout_constraintTop_toBottomOf="@+id/backArrow"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <TextView
        android:id="@+id/trackName"
        style="@style/ScreenHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_24dp"
        android:textColor="@color/text_dark"
        app:layout_constraintEnd_toEndOf="@id/rightGuideline"
        app:layout_constraintStart_toStartOf="@id/leftGuideline"
        app:layout_constraintTop_toBottomOf="@id/audioplayerCover"
        tools:text="Track name is hereTrack name is hereTrack name is hereTrack name is here" />

    <TextView
        android:id="@+id/groupName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_12dp"
        android:fontFamily="@font/ys_display_medium"
        android:singleLine="true"
        android:textSize="@dimen/font_14sp"
        app:layout_constraintEnd_toEndOf="@id/rightGuideline"
        app:layout_constraintStart_toStartOf="@id/leftGuideline"
        app:layout_constraintTop_toBottomOf="@id/trackName"
        tools:text="Group name is here" />

    <ImageView
        android:id="@+id/btnAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/audio_addbutton"
        app:layout_constraintBottom_toBottomOf="@id/btnPlay"
        app:layout_constraintStart_toStartOf="@id/leftGuideline"
        app:layout_constraintTop_toBottomOf="@id/groupName"
        app:layout_constraintTop_toTopOf="@id/btnPlay" />

    <ImageView
        android:id="@+id/btnPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_30dp"
        android:src="@drawable/audio_playbutton"
        app:layout_constraintEnd_toStartOf="@id/btnLike"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@id/btnAdd"
        app:layout_constraintTop_toBottomOf="@id/groupName" />

    <ImageView
        android:id="@+id/btnLike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/audio_likebutton"
        app:layout_constraintBottom_toBottomOf="@+id/btnPlay"
        app:layout_constraintEnd_toStartOf="@id/rightGuideline"
        app:layout_constraintTop_toTopOf="@+id/btnPlay" />

    <TextView
        android:id="@+id/trackTimeInProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_4dp"

        android:textSize="@dimen/font_14sp"
        android:textColor="@color/text_dark"
        android:fontFamily="@font/ys_display_medium"
        android:text="@string/player_time_default"

        app:layout_constraintTop_toBottomOf="@+id/btnPlay"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@id/leftGuideline"
        app:layout_constraintEnd_toStartOf="@id/rightGuideline"
    />

    <TextView
        android:id="@+id/fieldTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/AudioPlayerTrackFields"

        android:text="@string/audio_track_time"

        app:layout_constraintStart_toEndOf="@id/leftGuideline"
        app:layout_constraintTop_toBottomOf="@id/trackTimeInProgress"
        app:layout_constraintBottom_toTopOf="@id/fieldAlbum"/>

    <TextView
        android:id="@+id/audioTrackTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/AudioPlayerTrackShownInfo"

        app:layout_constraintEnd_toStartOf="@id/rightGuideline"
        app:layout_constraintBaseline_toBaselineOf="@id/fieldTime"
        app:layout_constraintStart_toEndOf="@id/fieldTime"

        tools:text="4:56"/>

    <androidx.constraintlayout.widget.Group
        android:id="@+id/groupAlbum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="audioAlbumName, fieldAlbum"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/fieldAlbum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/AudioPlayerTrackFields"

        android:text="@string/audio_album_name"

        app:layout_constraintStart_toEndOf="@id/leftGuideline"
        app:layout_constraintTop_toBottomOf="@id/fieldTime"
        app:layout_constraintBottom_toTopOf="@id/fieldYear"/>

    <TextView
        android:id="@+id/audioAlbumName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/AudioPlayerTrackShownInfo"
        android:paddingBottom="@dimen/padding_8dp"

        app:layout_constraintEnd_toStartOf="@id/rightGuideline"
        app:layout_constraintBaseline_toBaselineOf="@id/fieldAlbum"
        app:layout_constraintStart_toEndOf="@id/fieldTime"

        tools:text="brrrrrrrrrrrrr"/>

    <TextView
        android:id="@+id/fieldYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/AudioPlayerTrackFields"

        android:text="@string/audio_year"

        app:layout_constraintStart_toEndOf="@id/leftGuideline"
        app:layout_constraintTop_toBottomOf="@id/audioAlbumName"
        app:layout_constraintBottom_toTopOf="@id/fieldGenre"/>

    <TextView
        android:id="@+id/audioYear"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/AudioPlayerTrackShownInfo"

        app:layout_constraintEnd_toStartOf="@id/rightGuideline"
        app:layout_constraintBaseline_toBaselineOf="@id/fieldYear"
        app:layout_constraintStart_toEndOf="@id/fieldTime"

        tools:text="1984"/>

    <TextView
        android:id="@+id/fieldGenre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/AudioPlayerTrackFields"

        android:text="@string/audio_genre"

        app:layout_constraintStart_toEndOf="@id/leftGuideline"
        app:layout_constraintTop_toBottomOf="@id/fieldYear"
        app:layout_constraintBottom_toTopOf="@id/fieldCountry"/>

    <TextView
        android:id="@+id/audioGenre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/AudioPlayerTrackShownInfo"

        app:layout_constraintEnd_toStartOf="@id/rightGuideline"
        app:layout_constraintBaseline_toBaselineOf="@id/fieldGenre"
        app:layout_constraintStart_toEndOf="@id/fieldTime"

        tools:text="classic"/>


    <TextView
        android:id="@+id/fieldCountry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/AudioPlayerTrackFields"

        android:text="@string/audio_country"

        app:layout_constraintStart_toEndOf="@id/leftGuideline"
        app:layout_constraintTop_toBottomOf="@id/fieldGenre"
        app:layout_constraintBottom_toBottomOf="@id/lowerView"/>

    <TextView
        android:id="@+id/audioCountry"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/AudioPlayerTrackShownInfo"

        app:layout_constraintEnd_toStartOf="@id/rightGuideline"
        app:layout_constraintBaseline_toBaselineOf="@id/fieldCountry"
        app:layout_constraintStart_toEndOf="@id/fieldTime"

        tools:text="Norway"/>

    <View
        android:id="@+id/lowerView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/audio_empty_view_bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fieldCountry"/>


</androidx.constraintlayout.widget.ConstraintLayout>