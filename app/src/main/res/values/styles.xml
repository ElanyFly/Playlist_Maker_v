<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainScreenButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="colorAccent">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginHorizontal">@dimen/padding_16dp</item>
        <item name="android:layout_marginBottom">@dimen/padding_16dp</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:textColor">@color/text_activity_main</item>
        <item name="android:textSize">@dimen/font_22sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="iconTint">@color/text_activity_main</item>
        <item name="iconPadding">@dimen/padding_8dp</item>
        <item name="iconGravity">textStart</item>
        <item name="android:letterSpacing">0</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="PrefText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:textSize">@dimen/font_16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="PrefLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/padding_16dp</item>
        <item name="android:paddingVertical">@dimen/padding_21dp</item>
    </style>

    <style name="SearchEditText">
        <item name="android:textColor">@color/text_activity_main</item>
        <item name="android:textColorHint">@color/search_light_grey</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
        <item name="android:textSize">@dimen/font_16sp</item>
    </style>

    <style name="ScreenHeader">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/font_22sp</item>
    </style>

    <style name="ErrorMessage">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/font_19sp</item>
        <item name="android:textColor">@color/text_dark</item>
    </style>

    <style name="RefreshButton">
        <item name="android:background">@drawable/button</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/font_14sp</item>
        <item name="android:textColor">@color/bg_activity_white</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/text_dark</item>
    </style>

    <style name="myBaseTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:colorPrimary">@android:color/white</item>
        <item name="android:colorPrimaryDark">@android:color/black</item>
        <item name="android:textAppearanceButton">@style/textAppearanceButton</item>
    </style>

    <style name="textAppearanceButton">
        <item name="android:textAllCaps">false</item>
    </style>
</resources>